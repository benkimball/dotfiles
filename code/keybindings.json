// Place your key bindings in this file to overwrite the defaults
[
  // Toggle between terminal and editor focus
  { "key": "ctrl+`", "command": "workbench.action.terminal.focus" },
  { "key": "ctrl+`", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
  { "key": "pagedown", "command": "scrollPageDown", "when": "editorTextFocus" },
  { "key": "pageup", "command": "scrollPageUp", "when": "editorTextFocus" },
  { "key": "cmd+t", "command": "workbench.action.quickOpen" },
  { "key": "cmd+p", "command": "-workbench.action.quickOpen" },
  { "key": "cmd+p", "command": "workbench.action.quickOpen" },
  { "key": "cmd+t", "command": "-workbench.action.showAllSymbols" },
  {
    "key": "escape",
    "command": "editor.action.triggerSuggest",
    "when": "!findWidgetVisible && !editorHasMultipleSelections"
  },
  {
    "key": "escape",
    "command": "hideSuggestWidget",
    "when": "editorTextFocus && suggestWidgetVisible"
  },
  {
    "key": "ctrl+cmd+t",
    "command": "extension.runFileSpecs"
  },
  {
    "key": "shift+cmd+t",
    "command": "-extension.runFileSpecs"
  }
]
